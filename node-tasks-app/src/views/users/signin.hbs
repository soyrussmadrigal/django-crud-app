<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Accounto Login
      </div>
      <img src="/img/logo.png" class="rounded-circle mx-auto d-block m-4 logo">
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="form-group">
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Email"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
              Login
          </button>
        </form>
      </div>
    </div>
  </div>
</div>