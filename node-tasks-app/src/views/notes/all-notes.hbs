<div class="row">
  {{#each notes}}
    <div class="col-md-2">
      <div class="card">
        <div class="card-body">
          <h4
            class="card-title d-flex justify-content-between aling-items-center">
          {{title}} <a href="/notes/edit/{{_id}}"><i class="fa fa-pencil"></i></a>
          </h4>
          <p>{{description}}</p>
          <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
          </form>
        </div>
      </div>
    </div>
  {{/each}}
</div>